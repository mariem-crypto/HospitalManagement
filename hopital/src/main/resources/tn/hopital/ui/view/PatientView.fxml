<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<BorderPane styleClass="patient-background" stylesheets="@../css/patient.css" xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml" fx:controller="tn.hopital.ui.controller.PatientController">

    <!-- ==================== BARRE DU HAUT ==================== -->
    <top>
        <!-- NavBar + titre de la page -->
        <VBox prefHeight="90.0" prefWidth="794.0" BorderPane.alignment="CENTER">

            <!-- ðŸ”¹ Barre de navigation commune -->
            <fx:include source="../components/NavBar.fxml" />

            <!-- ðŸ”¹ Bandeau titre spÃ©cifique Patients -->
            <VBox alignment="CENTER" styleClass="top-bar">
                <Label styleClass="page-title" text="Gestion des Patients" />
                <Separator styleClass="separator" />
            </VBox>

        </VBox>
    </top>

    <!-- ==================== CONTENU PRINCIPAL ==================== -->
    <center>
        <VBox alignment="CENTER" styleClass="main-card">
            <padding>
                <Insets bottom="10.0" left="50.0" right="50.0" top="10.0" />
            </padding>

            <!-- ==================== FORMULAIRE ==================== -->
            <VBox spacing="5.0" styleClass="form-section">
                <Label styleClass="section-title" text="Informations du patient" />

                <GridPane hgap="20" styleClass="form-grid" vgap="16">
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT" minWidth="140" />
                        <ColumnConstraints hgrow="ALWAYS" />
                    </columnConstraints>

                    <!-- Ligne 1 : Nom -->
                    <Label styleClass="field-label" text="Nom :" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <TextField fx:id="txtNom" promptText="Nom de famille" styleClass="text-field" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                    <!-- Ligne 2 : PrÃ©nom -->
                    <Label styleClass="field-label" text="PrÃ©nom :" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <TextField fx:id="txtPrenom" promptText="PrÃ©nom" styleClass="text-field" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                    <!-- Ligne 3 : Date de naissance -->
                    <Label styleClass="field-label" text="Date de naissance :" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                    <DatePicker fx:id="dpDateNaissance" minHeight="55.0" styleClass="date-picker" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                    <!-- Ligne 4 : Adresse -->
                    <Label styleClass="field-label" text="Adresse :" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                    <TextField fx:id="txtAdresse" promptText="Rue, code postal, ville" styleClass="text-field" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                    <!-- Ligne 5 : TÃ©lÃ©phone -->
                    <Label styleClass="field-label" text="TÃ©lÃ©phone :" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                    <TextField fx:id="txtTelephone" promptText="Ex: 99 123 456" styleClass="text-field" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                    <!-- Ligne 6 : Email -->
                    <Label styleClass="field-label" text="Email :" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                    <TextField fx:id="txtEmail" promptText="ex: nom@domaine.com" styleClass="text-field" GridPane.columnIndex="1" GridPane.rowIndex="5" />

                    <rowConstraints>
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                    </rowConstraints>
                </GridPane>

                <!-- ==================== BOUTONS D'ACTION ==================== -->
                <HBox alignment="CENTER_RIGHT" spacing="5.0" styleClass="button-bar">
                    <Button onAction="#onAjouter" styleClass="btn-primary btn-large" text="Ajouter" />
                    <Button onAction="#onModifier" styleClass="btn-success btn-large" text="Modifier" />
                    <Button onAction="#onSupprimer" styleClass="btn-danger btn-large" text="Supprimer" />
                    <Button onAction="#onClear" styleClass="btn-secondary btn-large" text="Vider" />
                </HBox>
            </VBox>

            <!-- ==================== TABLEAU DES PATIENTS ==================== -->
            <VBox spacing="5.0" styleClass="table-section">
                <Label styleClass="section-title" text="Liste des patients enregistrÃ©s" />
                <TableView fx:id="tablePatients" prefHeight="219.0" prefWidth="950.0" styleClass="modern-table">
                    <columns>
                        <TableColumn fx:id="colId" prefWidth="80.0" text="ID" />
                        <TableColumn fx:id="colNom" prefWidth="120.0" text="Nom" />
                        <TableColumn fx:id="colPrenom" prefWidth="130.0" text="PrÃ©nom" />
                        <TableColumn fx:id="colDateNaissance" prefWidth="130.0" text="Naissance" />
                        <TableColumn fx:id="colTelephone" prefWidth="120.0" text="TÃ©lÃ©phone" />
                        <TableColumn fx:id="colAdresse" prefWidth="200.0" text="Adresse" />
                        <TableColumn fx:id="colEmail" prefWidth="170.0" text="Email" />
                    </columns>
                </TableView>
            </VBox>
        </VBox>
    </center>
</BorderPane>
