<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="tn.hopital.ui.controller.MainController"
            styleClass="main-background"
            stylesheets="@../css/main.css">

    <!-- ==================== TOP : Menu + Déconnexion ==================== -->
    <top>
        <VBox styleClass="top-bar">
            <MenuBar styleClass="custom-menu-bar">
                <Menu text="Fichier">
                    <MenuItem text="Quitter l'application" onAction="#onQuitter" />
                </Menu>
                <Menu text="Gestion">
                    <MenuItem text="Patients" onAction="#onPatientsClick" />
                    <MenuItem text="Médecins" onAction="#onMedecinsClick" />
                    <MenuItem text="Rendez-vous" onAction="#onRendezVousClick" />
                </Menu>
                <Menu text="Aide">
                    <MenuItem text="À propos" />
                </Menu>
            </MenuBar>

            <!-- Bouton Déconnexion à droite -->
            <HBox alignment="CENTER_RIGHT" styleClass="logout-bar">
                <padding>
                    <Insets top="8" right="20" bottom="8" left="20"/>
                </padding>
                <Button fx:id="btnLogout"
                        text="Déconnexion"
                        onAction="#onLogout"
                        styleClass="btn-logout">
                    <graphic>
                        <Label text="Logout" style="-fx-font-family: 'Segoe UI Emoji';"/>
                    </graphic>
                </Button>
            </HBox>
        </VBox>
    </top>

    <!-- ==================== CENTER : Contenu principal ==================== -->
    <center>
        <VBox alignment="CENTER" spacing="40" styleClass="content-pane">
            <padding>
                <Insets top="60" right="40" bottom="60" left="40"/>
            </padding>

            <!-- Titre principal -->
            <VBox alignment="CENTER" spacing="10">
                <Label text="Système de Gestion Hospitalière"
                       styleClass="main-title"/>
                <Label fx:id="lblTitre"
                       text="Bienvenue, Administrateur"
                       styleClass="subtitle"/>
            </VBox>

            <!-- Cartes d'action -->
            <HBox alignment="CENTER" spacing="40">
                <!-- Patients -->
                <VBox alignment="CENTER" spacing="15" styleClass="card"
                      onMouseClicked="#onPatientsClick">
                    <Label text="Patients" styleClass="card-icon"/>
                    <Label text="Gérer les patients" styleClass="card-title"/>
                    <Label text="Ajouter • Modifier • Supprimer • Consulter" 
                           styleClass="card-desc"/>
                </VBox>

                <!-- Médecins -->
                <VBox alignment="CENTER" spacing="15" styleClass="card"
                      onMouseClicked="#onMedecinsClick">
                    <Label text="Médecins" styleClass="card-icon"/>
                    <Label text="Gérer les médecins" styleClass="card-title"/>
                    <Label text="Planning • Spécialités • Disponibilité" 
                           styleClass="card-desc"/>
                </VBox>

                <!-- Rendez-vous -->
                <VBox alignment="CENTER" spacing="15" styleClass="card"
                      onMouseClicked="#onRendezVousClick">
                    <Label text="Calendrier" styleClass="card-icon"/>
                    <Label text="Gérer les rendez-vous" styleClass="card-title"/>
                    <Label text="Prendre RDV • Annuler • Historique" 
                           styleClass="card-desc"/>
                </VBox>
            </HBox>
        </VBox>
    </center>

</BorderPane>
