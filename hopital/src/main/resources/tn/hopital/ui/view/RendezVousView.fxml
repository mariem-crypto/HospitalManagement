<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.fxml.FXMLLoader?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="tn.hopital.ui.controller.RendezVousController"
            styleClass="rendezvous-background"
            stylesheets="@../css/rendezvous.css">

    <!-- ==================== TOP BAR ==================== -->
    <top>
        <VBox>

            <!-- ðŸ”¹ Barre de navigation commune -->
            <fx:include source="../components/NavBar.fxml"/>

            <!-- ðŸ”¹ Bandeau titre spÃ©cifique Rendez-vous -->
            <VBox styleClass="top-bar">
                <Label text="Gestion des Rendez-vous" styleClass="page-title"/>
                <Separator styleClass="separator"/>
            </VBox>

        </VBox>
    </top>

    <!-- ==================== CONTENU PRINCIPAL ==================== -->
    <center>
        <VBox spacing="30" alignment="CENTER" styleClass="main-card">
            <padding>
                <Insets top="35" right="50" bottom="40" left="50"/>
            </padding>

            <!-- ==================== FORMULAIRE ==================== -->
            <VBox spacing="20" styleClass="form-section">
                <Label text="Planifier un rendez-vous" styleClass="section-title"/>

                <GridPane hgap="20" vgap="16" styleClass="form-grid">
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT" minWidth="140"/>
                        <ColumnConstraints hgrow="ALWAYS"/>
                    </columnConstraints>

                    <Label text="Patient :"      GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="field-label"/>
                    <ComboBox fx:id="cbPatient" GridPane.rowIndex="0" GridPane.columnIndex="1"
                              promptText="SÃ©lectionner un patient" styleClass="combo-box"/>

                    <Label text="MÃ©decin :"      GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="field-label"/>
                    <ComboBox fx:id="cbMedecin" GridPane.rowIndex="1" GridPane.columnIndex="1"
                              promptText="SÃ©lectionner un mÃ©decin" styleClass="combo-box"/>

                    <Label text="Date :"         GridPane.rowIndex="2" GridPane.columnIndex="0" styleClass="field-label"/>
                    <DatePicker fx:id="dpDate"  GridPane.rowIndex="2" GridPane.columnIndex="1" styleClass="date-picker"/>

                    <Label text="Heure (HH:mm) :" GridPane.rowIndex="3" GridPane.columnIndex="0" styleClass="field-label"/>
                    <TextField fx:id="txtHeure"  GridPane.rowIndex="3" GridPane.columnIndex="1"
                               promptText="ex: 14:30" styleClass="text-field"/>
                </GridPane>

                <!-- Boutons -->
                <HBox spacing="15" alignment="CENTER_RIGHT" styleClass="button-bar">
                    <Button text="Planifier"  onAction="#onAjouter"    styleClass="btn-primary btn-large"/>
                    <Button text="Supprimer"  onAction="#onSupprimer"  styleClass="btn-danger btn-large"/>
                    <Button text="Vider"      onAction="#onClear"      styleClass="btn-secondary btn-large"/>
                </HBox>
            </VBox>

            <!-- ==================== TABLEAU ==================== -->
            <VBox spacing="12" styleClass="table-section">
                <Label text="Liste des rendez-vous" styleClass="section-title"/>
                <TableView fx:id="tableRdv" prefHeight="420" styleClass="modern-table">
                    <columns>
                        <TableColumn fx:id="colId"        text="ID"              prefWidth="70"/>
                        <TableColumn fx:id="colPatient"   text="Patient"         prefWidth="200"/>
                        <TableColumn fx:id="colMedecin"   text="MÃ©decin"         prefWidth="200"/>
                        <!-- & doit Ãªtre Ã©chappÃ© en &amp; -->
                        <TableColumn fx:id="colDateHeure" text="Date &amp; Heure" prefWidth="180"/>
                    </columns>
                </TableView>
            </VBox>
        </VBox>
    </center>
</BorderPane>
