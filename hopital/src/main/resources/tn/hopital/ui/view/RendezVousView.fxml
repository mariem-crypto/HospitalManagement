<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<BorderPane
        styleClass="rendezvous-background"
        stylesheets="@../css/rendezvous.css"
        xmlns="http://javafx.com/javafx/21"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="tn.hopital.ui.controller.RendezVousController">

    <!-- ==================== TOP BAR ==================== -->
    <top>
        <VBox>

            <!-- ðŸ”¹ Barre de navigation commune -->
            <fx:include source="../components/NavBar.fxml" />

            <!-- ðŸ”¹ Bandeau titre spÃ©cifique Rendez-vous -->
            <VBox alignment="CENTER" styleClass="top-bar">
                <Label styleClass="page-title" text="Gestion des Rendez-vous" />
                <Separator styleClass="separator" />
            </VBox>

        </VBox>
    </top>

    <!-- ==================== CONTENU PRINCIPAL ==================== -->
    <center>
        <VBox alignment="CENTER" spacing="5.0" styleClass="main-card">
            <padding>
                <Insets bottom="40" left="50" right="50" top="35" />
            </padding>

            <!-- ==================== FORMULAIRE ==================== -->
            <VBox spacing="20" styleClass="form-section">
                <Label styleClass="section-title" text="Planifier un rendez-vous" />

                <GridPane hgap="20" vgap="16" styleClass="form-grid">
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT" minWidth="140" />
                        <ColumnConstraints hgrow="ALWAYS" />
                    </columnConstraints>

                    <rowConstraints>
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                    </rowConstraints>

                    <Label styleClass="field-label" text="Patient :" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <ComboBox fx:id="cbPatient" promptText="SÃ©lectionner un patient"
                              styleClass="combo-box" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                    <Label styleClass="field-label" text="MÃ©decin :" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <ComboBox fx:id="cbMedecin" promptText="SÃ©lectionner un mÃ©decin"
                              styleClass="combo-box" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                    <Label styleClass="field-label" text="Date :" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                    <DatePicker fx:id="dpDate" styleClass="date-picker"
                                GridPane.columnIndex="1" GridPane.rowIndex="2" />

                    <Label styleClass="field-label" text="Heure (HH:mm) :" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                    <TextField fx:id="txtHeure" promptText="ex: 14:30" styleClass="text-field"
                               GridPane.columnIndex="1" GridPane.rowIndex="3" />
                </GridPane>

                <!-- Boutons -->
                <HBox alignment="CENTER_RIGHT" spacing="15" styleClass="button-bar">
                    <Button onAction="#onAjouter" styleClass="btn-primary btn-large" text="Planifier" />
                    <Button onAction="#onSupprimer" styleClass="btn-danger btn-large" text="Supprimer" />
                    <Button onAction="#onClear" styleClass="btn-secondary btn-large" text="Vider" />
                </HBox>

                <VBox.margin>
                    <Insets bottom="10.0" />
                </VBox.margin>
            </VBox>

            <!-- ==================== TABLEAU ==================== -->
            <VBox spacing="5.0" styleClass="table-section">
                <Label styleClass="section-title" text="Liste des rendez-vous" />
                <TableView fx:id="tableRdv" prefHeight="177.0" prefWidth="854.0" styleClass="modern-table">
                    <columns>
                        <TableColumn fx:id="colId" prefWidth="172.0000194311142" text="ID" />
                        <TableColumn fx:id="colPatient" prefWidth="232.79998779296875" text="Patient" />
                        <TableColumn fx:id="colMedecin" prefWidth="188.79995727539062" text="MÃ©decin" />
                        <!-- & doit Ãªtre Ã©chappÃ© en &amp; -->
                        <TableColumn fx:id="colDateHeure" prefWidth="244.00006103515625" text="Date &amp; Heure" />
                    </columns>
                </TableView>
                <padding>
                    <Insets bottom="15.0" left="30.0" right="30.0" />
                </padding>
            </VBox>
        </VBox>
    </center>
</BorderPane>

