<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="tn.hopital.ui.controller.MedecinController"
            styleClass="medecin-background"
            stylesheets="@../css/medecin.css">

    <!-- ==================== BARRE DU HAUT ==================== -->
    <top>
        <VBox styleClass="top-bar">
            <Label text="Gestion des Médecins"
                   styleClass="page-title"/>
            <Separator styleClass="separator"/>
        </VBox>
    </top>

    <!-- ==================== CONTENU PRINCIPAL ==================== -->
    <center>
        <VBox spacing="30" alignment="CENTER" styleClass="main-card">
            <padding>
                <Insets top="35" right="50" bottom="40" left="50"/>
            </padding>

            <!-- ==================== FORMULAIRE ==================== -->
            <VBox spacing="20" styleClass="form-section">
                <Label text="Informations du médecin" styleClass="section-title"/>

                <GridPane hgap="20" vgap="16" styleClass="form-grid">
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT" minWidth="140"/>
                        <ColumnConstraints hgrow="ALWAYS"/>
                    </columnConstraints>

                    <!-- Ligne 1 -->
                    <Label text="Nom :"                GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="field-label"/>
                    <TextField fx:id="txtNom"          GridPane.rowIndex="0" GridPane.columnIndex="1"
                               promptText="Nom de famille" styleClass="text-field"/>

                    <!-- Ligne 2 -->
                    <Label text="Prénom :"             GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="field-label"/>
                    <TextField fx:id="txtPrenom"       GridPane.rowIndex="1" GridPane.columnIndex="1"
                               promptText="Prénom" styleClass="text-field"/>

                    <!-- Ligne 3 -->
                    <Label text="Spécialité :"         GridPane.rowIndex="2" GridPane.columnIndex="0" styleClass="field-label"/>
                    <ComboBox fx:id="cbSpecialite"     GridPane.rowIndex="2" GridPane.columnIndex="1"
                              promptText="Sélectionner une spécialité" styleClass="combo-box"/>

                    <!-- Ligne 4 -->
                    <Label text="Téléphone :"          GridPane.rowIndex="3" GridPane.columnIndex="0" styleClass="field-label"/>
                    <TextField fx:id="txtTelephone"    GridPane.rowIndex="3" GridPane.columnIndex="1"
                               promptText="Ex: 99 123 456" styleClass="text-field"/>
                </GridPane>

                <!-- ==================== BOUTONS D'ACTION ==================== -->
                <HBox spacing="15" alignment="CENTER_RIGHT" styleClass="button-bar">
                    <Button text="Ajouter"      onAction="#onAjouter"   styleClass="btn-primary btn-large"/>
                    <Button text="Modifier"     onAction="#onModifier"  styleClass="btn-success btn-large"/>
                    <Button text="Supprimer"    onAction="#onSupprimer" styleClass="btn-danger btn-large"/>
                    <Button text="Vider"        onAction="#onClear"     styleClass="btn-secondary btn-large"/>
                </HBox>
            </VBox>

            <!-- ==================== TABLEAU DES MÉDECINS ==================== -->
            <VBox spacing="12" styleClass="table-section">
                <Label text="Liste des médecins enregistrés" styleClass="section-title"/>
                <TableView fx:id="tableMedecins" prefHeight="420" styleClass="modern-table">
                    <columns>
                        <TableColumn fx:id="colId"         text="ID"          prefWidth="70"/>
                        <TableColumn fx:id="colNom"        text="Nom"         prefWidth="150"/>
                        <TableColumn fx:id="colPrenom"     text="Prénom"      prefWidth="150"/>
                        <TableColumn fx:id="colSpecialite" text="Spécialité"  prefWidth="180"/>
                        <TableColumn fx:id="colTelephone"  text="Téléphone"   prefWidth="140"/>
                    </columns>
                </TableView>
            </VBox>
        </VBox>
    </center>
</BorderPane>

