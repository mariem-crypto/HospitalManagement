<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="tn.hopital.ui.controller.LoginController"
            stylesheets="@../css/login.css"
            styleClass="login-background">

    <center>
        <VBox spacing="30" alignment="CENTER" maxWidth="380">
            <padding>
                <Insets top="50" right="50" bottom="50" left="50"/>
            </padding>

            <!-- Titre -->
            <Label text="Login"
                   style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #333;"/>

            <!-- Champ utilisateur -->
            <VBox spacing="8">
                <Label text="Nom d'utilisateur" 
                       style="-fx-text-fill: #555; -fx-font-weight: 600;"/>
                <TextField fx:id="txtUsername"
                           promptText="Entrez votre nom d'utilisateur"
                           prefHeight="45"
                           styleClass="text-field-rounded"/>
            </VBox>

            <!-- Champ mot de passe -->
            <VBox spacing="8">
                <Label text="Mot de passe" 
                       style="-fx-text-fill: #555; -fx-font-weight: 600;"/>
                <PasswordField fx:id="txtPassword"
                               promptText="Entrez votre mot de passe"
                               prefHeight="45"
                               styleClass="text-field-rounded"/>
            </VBox>

            <!-- Bouton Se connecter (centrÃ© sous les champs) -->
            <Button text="Se connecter"
                    onAction="#onLogin"
                    prefWidth="280"
                    prefHeight="48"
                    styleClass="btn-login">
                <font>
                    <Font name="System Bold" size="16"/>
                </font>
            </Button>

            <!-- Message d'erreur -->
            <Label fx:id="lblMessage"
                   text=""
                   style="-fx-text-fill: #e74c3c; -fx-font-size: 13px;"
                   alignment="CENTER"/>
        </VBox>
    </center>

</BorderPane>